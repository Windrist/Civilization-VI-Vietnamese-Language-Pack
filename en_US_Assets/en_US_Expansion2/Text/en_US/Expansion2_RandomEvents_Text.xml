		<Replace Language='en_US' Tag="LOC_DEFORESTATION_LIGHT_NAME">
			<Text>Light</Text>
		</Replace>
		<Replace Language='en_US' Tag="LOC_DEFORESTATION_EXPECTED_NAME">
			<Text>Expected</Text>
		</Replace>
		<Replace Language='en_US' Tag="LOC_DEFORESTATION_HEAVY_NAME">
			<Text>Heavy</Text>
		</Replace>
